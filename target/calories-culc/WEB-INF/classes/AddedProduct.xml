<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.app.AddedProduct" table="productperday">

        <id name="recordId" type="java.lang.Integer">
            <column name="ID"/>
            <generator class="identity"/>
        </id>

        <property name="date" type="java.util.Date">
            <column name="DATE" length="200" not-null="true"/>
        </property>

        <property name="mass" type="java.lang.Integer">
            <column name="MASS" length="200" not-null="true"/>
        </property>

        <property name="userId" type="string">
            <column name="ROLE" length="200" not-null="true"/>
        </property>

    </class>

</hibernate-mapping>